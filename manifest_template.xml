<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:type="TaskPaneApp">

  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>
  <Version>1.0.0</Version>
  <ProviderName>文書校正アシスタント</ProviderName>
  <DefaultLocale>ja-JP</DefaultLocale>
  <DisplayName DefaultValue="文書校正アシスタント"/>
  <Description DefaultValue="OpenAI API を使って日本語文書を校正します。"/>
  <IconUrl DefaultValue="GITHUB_PAGES_URL/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="GITHUB_PAGES_URL/assets/icon-64.png"/>
  <SupportUrl DefaultValue="https://github.com/GITHUB_USERNAME/REPO_NAME"/>

  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <DefaultSettings>
    <SourceLocation DefaultValue="GITHUB_PAGES_URL/taskpane.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <GetStarted>
            <Title resid="GetStarted.Title"/>
            <Description resid="GetStarted.Description"/>
            <LearnMoreUrl resid="GetStarted.LearnMoreUrl"/>
          </GetStarted>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup">
                <Label resid="CommandsGroup.Label"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="GITHUB_PAGES_URL/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="GITHUB_PAGES_URL/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="GITHUB_PAGES_URL/assets/icon-64.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://github.com/GITHUB_USERNAME/REPO_NAME"/>
        <bt:Url id="Commands.Url"            DefaultValue="GITHUB_PAGES_URL/commands.html"/>
        <bt:Url id="Taskpane.Url"            DefaultValue="GITHUB_PAGES_URL/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title"       DefaultValue="文書校正アシスタント"/>
        <bt:String id="CommandsGroup.Label"    DefaultValue="校正ツール"/>
        <bt:String id="TaskpaneButton.Label"   DefaultValue="文書を校正する"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="OpenAI API を使って日本語文書を校正します。"/>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="文書校正アシスタントを開きます。"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
